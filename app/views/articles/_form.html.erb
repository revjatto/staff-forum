<div class="row">
	<div class="col-md-12">

<%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f| %>

<% if @article.errors.any? %>
    <div id="error_explanation alert alert-danger alert-dismissible" role="alert">
         <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4><%= pluralize(@article.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
          <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
	<div class="control-label col-md-1">
<%= f.label :title %>
</div>
<div class="col-md-11">
<%= f.text_field :title, class: "form-control", placeholder: "Title of Article here", autofocus: true %>
</div>
</div>


<div class="form-group">
	<div class="control-label col-md-1">
<%= f.label :body %>
</div>
<div class="col-md-11">
<%= f.text_area :body, row: 10, class: "form-control", placeholder: "Content of your article here" %>
</div>
</div>


     <div class="control-label col-md-1">
     <div class="form-group">
     	<%= f.submit "Submit", class: "btn btn-primary btn-lg pull-right" %> 
     </div>
     </div>

<% end %>
</div>
</div>